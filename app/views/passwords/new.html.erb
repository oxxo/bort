<%= page_title  t('passwords.title') , :h2 %>  
<% form_for @password do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend><%= t('passwords.form_title') %></legend>
    <ol>
      <li>
        <%= f.label :email, t('passwords.email') %>
        <%= f.text_field :email %>
      </li>
    </ol>
  </fieldset>
  <div class="buttons">
    <%= f.submit t('passwords.submit_button') %>
  </div>
<% end %>